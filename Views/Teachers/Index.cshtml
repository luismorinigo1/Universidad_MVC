@model IEnumerable<Universidad.Models.Teacher>

@{
    ViewBag.Title = "Profesores";
}

@{
    var numero = Model.Count();
}

<h2 class="page-header">Profesores<small> @numero  REGISTRO</small></h2>

<p>
    @Html.ActionLink("Crear Nuevos Profesores", "Create")
<p>
    @Html.ActionLink("Volver Al Menu Administrador", "Index", "MenuADM")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Namee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Namee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_Teacher }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_Teacher }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id_Teacher })
            </td>
        </tr>
    }

</table>
