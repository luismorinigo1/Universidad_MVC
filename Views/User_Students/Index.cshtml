@model IEnumerable<Universidad.Models.User_Students>

@{
    ViewBag.Title = "Alumnos";
}

@{
    var numero = Model.Count();
}

<h2 class="page-header">Alumnos<small> @numero  REGISTRO</small></h2>
<p>
    @Html.ActionLink("Crear Nuevos Alumnos", "Create")
<p>
    @Html.ActionLink("Volver Al Menu Administrador", "Index", "MenuADM")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Namee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Surname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dni)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Filee)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Subjects)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Namee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Filee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Subjects)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.Id_User }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.Id_User }) |
                @Html.ActionLink("Borrar", "Delete", new { id = item.Id_User })
            </td>
        </tr>
    }

</table>
